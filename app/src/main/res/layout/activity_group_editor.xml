<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GroupEditorActivity">

    <EditText
        android:id="@+id/group_editor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="32dp"
        android:hint="Enter Name"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="@dimen/detail_text_size"
        app:layout_constraintStart_toStartOf="@+id/group_editor_name_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/group_editor_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Group Name"
        android:textSize="@dimen/list_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/group_editor_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/group_editor_name">

        <TextView
            android:id="@+id/group_editor_chair_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:text="Chairperson"
            android:textSize="@dimen/list_text_size" />

        <Spinner
            android:id="@+id/group_editor_spinner"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="top"
            android:layout_marginTop="16dp"
            android:layout_marginStart="64dp"
            android:layout_marginBottom="16dp"
            android:spinnerMode="dialog" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>